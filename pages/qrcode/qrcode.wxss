/* pages/qrcode/qrcode.wxss */

page {
  height: 100%;
  background: rgba(0, 0, 0, 0.45);
}

.qrcode-box {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.qrcode-cont {
  width: 90%;
  margin: 0 auto;
  min-height: 600rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.qc-box {
  padding: 10rpx 0 40rpx;
}

.qc-cont {
  width: 600rpx;
  height: 600rpx;
  margin: 0 auto;
}
.qc-cont image {
  width: 100%;
  height: 100%;
}

.canvas-box {
  position: fixed;
  top: 999999rpx;
  left: 0;
}
.qc-desc {
  position: relative;
  margin-top: -30rpx;
}